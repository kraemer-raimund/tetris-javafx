<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="main.TetrisController">
    <children>
      <Group>
         <children>
              <Canvas fx:id="mainCanvas" height="300" width="200.0" />
         </children>
      </Group>
      <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1">
         <children>
            <Label text="Next:" />
              <Canvas fx:id="nextCanvas" height="60" width="60" />
              <Label fx:id="stoneCount" text="Stones: " />
              <Label fx:id="lineCount" text="Lines: " />
         </children>
      </VBox>
    </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
